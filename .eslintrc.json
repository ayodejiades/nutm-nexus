// .eslintrc.json
{
  "extends": "next/core-web-vitals",
  "rules": {
    "react/no-unescaped-entities": "warn", // Set to warn or off
    "@typescript-eslint/no-explicit-any": "warn", // Set to warn or off
    "@typescript-eslint/no-unused-vars": [
      "warn", // Use "warn" to prevent build failure
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  }
}
